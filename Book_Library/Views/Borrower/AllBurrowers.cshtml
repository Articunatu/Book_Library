@model BorrowerViewModel

<div class="container">

    <h2 class="card-header">Alla lånetagare</h2>
    <div class="card-columns">
        <div class="user-name">
            <h5>Namn</h5>
        </div>

        <div class="user-number">
            <h5>Personnummer</h5>
        </div>

        <div class="change-user">
            <h5>Ändra lånetagare</h5>
        </div>
    </div>
    @foreach (var item in Model.Borrowers)
    {
        <div class="fa-border">
            <div class="card-columns">
                <div class="user-name">
                    <a asp-area="" asp-controller="Borrower" asp-action="ChosenBorrower" asp-route-id=@item.BorrowerID>
                        <b>@item.FirstName @item.LastName</b>
                    </a>
                </div>
                <div class="user-number">
                    <span>@item.SecurityNumber</span>
                </div>

                <a type="button" class="btn btn-secondary" asp-area="" asp-controller="Borrower" asp-action="DeleteBorrower" asp-route-id=@item.BorrowerID>
                    <i class="fa-solid fa-trash"></i>
                </a>
                <a type="button" class="btn btn-primary" asp-area="" asp-controller="Borrower" asp-action="EditBorrower" asp-route-id=@item.BorrowerID>
                    <i class="fa fa-pencil-square"></i>
                </a>
            </div>
        </div>

    }
</div>