@model Borrower


<div class="container">

    <table class="table-bordered" cellpadding="2" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Lånetagare</th>
        </tr>
        <tr>
            <td>Förnamn:</td>
            <td>@Html.TextBoxFor(b => b.FirstName)</td>
        </tr>
        <tr>
            <td>Efternamn:</td>
            <td>@Html.TextBoxFor(b => b.LastName)</td>
        </tr>
        <tr>
            <td>Adress:</td>
            <td>@Html.TextBoxFor(b => b.Address)</td>
        </tr>
        <tr>
            <td>Personnummer:</td>
            <td>@Html.TextBoxFor(b => b.SecurityNumber)</td>
        </tr>
        <tr>
            <td>E-Post:</td>
            <td>@Html.TextBoxFor(b => b.EMail)</td>
        </tr>
    </table>

    

    <div class="card-columns">

        <div class="btn-outline-light">
            <a asp-area="" asp-controller="Borrower" asp-action="Loans" asp-route-id=@Model.BorrowerID>
                <i class="btn btn-info">SE ALLA LÅN</i>
            </a>
        </div>

        <div class="btn-outline-light">
            <a type="button" class="btn btn-secondary" asp-area="" asp-controller="Borrower" asp-action="DeleteBorrower" asp-route-id=@Model.BorrowerID>
                <i class="fa-solid fa-trash"></i>
            </a>
            <a type="button" class="btn btn-primary" asp-area="" asp-controller="Borrower" asp-action="EditBorrower" asp-route-id=@Model.BorrowerID>
                <i class="fa fa-pencil-square"></i>
            </a>
        </div>
    </div>

</div>